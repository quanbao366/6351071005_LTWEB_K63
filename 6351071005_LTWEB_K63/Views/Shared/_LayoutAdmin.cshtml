
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon" />

    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ seletor: 'textarea' });</script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar-collapse {
            background-color: #333;
            padding: 10px;
        }

            .navbar-collapse ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: space-around;
                align-items: center;
            }

            .navbar-collapse li {
                display: inline-block;
            }

            .navbar-collapse a {
                color: #fff;
                text-decoration: none;
                padding: 10px 20px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .navbar-collapse a:hover {
                    background-color: #575757;
                    color: #f0f0f0;
                }

        /* Basic Styling for the Footer */
        .site-footer {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            border-top: 3px solid #444;
        }

        /* Styling for Footer Content */
        .footer-content p {
            margin: 0;
            font-size: 0.9rem;
            color: #ccc;
        }

        /* Styling for Footer Links */
        .footer-links {
            list-style: none;
            padding: 0;
            margin: 15px 0 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

            .footer-links li {
                display: inline-block;
            }

            .footer-links a {
                color: #00a8ff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                /* Hover Effect for Links */
                .footer-links a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul>
            <li>
                @Html.ActionLink("Trang chủ", "Index", "Admin")
            </li>
            <li>
                @Html.ActionLink("Quản lý loại xe", "Sanpham", "Admin")
            </li>
            <li>
                @Html.ActionLink("Quản lý nhà phân phối", "Nhaxuatban", "Admin")
            </li>
            <li>
                @Html.ActionLink("Quản lý xe", "xe", "Admin")
            </li>
        </ul>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer class="site-footer">
        <div class="footer-content">
            <p>&copy; 2024 Your Company Name. All rights reserved.</p>
            <ul class="footer-links">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                <li><a href="@Url.Action("PrivacyPolicy", "Home")">Privacy Policy</a></li>
            </ul>
        </div>
    </footer>

</body>
</html>