    ViewBag.Title = "Chitietxe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT XE</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã xe:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaXe)
        </dd>

